<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.st3.coinquiapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/coinquiapp_logo"
        android:label="CoinquiApp"
        android:roundIcon="@mipmap/coinquiapp_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activity.Turni"
            android:label="Turni"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activity.SpesePersonali"
            android:label="Spese personali"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.Utenze"
            android:label="Utenze"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.SpashScreen"

            android:theme="@style/Theme.Design.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.UtenzeText"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>